{
  "schemaVersion": 1,
  "id": "bukkitfabric",
  "version": "${version}",

  "name": "BukkitFabric",
  "description": "The popular Bukkit modding API implementation for Fabric",
  "authors": [
    "Isaiah"
  ],
  "contact": {
    "homepage": "https://fungus-soft.com/",
    "sources": "https://github.com/fungus-soft/fabricbukkit/"
  },

  "license": "LGPLv3",
  "icon": "assets/fabricbukkit/icon.png",
  "accessWidener" : "bukkitfabric.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.fungus_soft.bukkitfabric.BukkitFabricMod"
    ]
  },
  "mixins": [
    "bukkitfabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.1",
    "fabric": "*",
    "minecraft": "1.15.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
